<f:UserControlBase x:Class="PRBD_2S_Aurélie.ListPosts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRBD_2S_Aurélie"
             xmlns:f="clr-namespace:PRBD_Framework;assembly=PRBD_Framework"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!--<TextBlock Text="Questions" FontSize="16" FontWeight="Bold"/>-->
        <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}" Width="700" />
            <Button Content="Clear" Command="{Binding ClearFilter}" Width="auto" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Background="Beige" Margin ="0,40,40,40">
            <Menu>
                <MenuItem Header="newest" FontSize="14" FontWeight="Bold" FontStyle="Italic" Width="68" Padding="6,0"   />
                <MenuItem Header="vote" Width="57" FontSize="14" FontWeight="Bold" FontStyle="Italic" />
                <MenuItem Header="unanswered" FontSize="14" FontWeight="Bold"  />
                <MenuItem Header="active" Width="60" FontSize="14" FontWeight="Bold" Margin="0"  />
                <MenuItem/>
            </Menu>
        </StackPanel>
        <ListView ItemsSource="{Binding Posts, UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel Margin="0,14,0,0" Grid.Row="7" Grid.ColumnSpan="2">
                        <TextBlock Height="auto" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" >
                            <Hyperlink Command="{Binding PostShow, UpdateSourceTrigger=PropertyChanged}"><Run Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/></Hyperlink>
                        </TextBlock>
                        <TextBlock>
                            <TextBox Text="{Binding AuthorPost, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Text="{Binding Timestamp, UpdateSourceTrigger=}"/>
                        </TextBlock>
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</f:UserControlBase>
